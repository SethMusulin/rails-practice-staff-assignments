<h1>Add a Staff Member</h1>

<% flash.each do |name, msg| -%>
<h3> <%= content_tag :div, msg, class: name %> </h3>
<% end -%>

<%= form_for @person do |f| %>
    <%@person.errors.messages.values.each do |msg| %>
        <%msg.each do  |m| %>
            <li class="errors"><%= m %></li>
        <%end %>
    <% end %>

  <div class="form-row">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, placeholder: "i.e. Dr." %>
  </div>

  <div class="form-row">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-row">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="form-row">
    <%= f.submit %>
  </div>

<% end %>