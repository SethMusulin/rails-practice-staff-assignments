<h2>Edit Person</h2>
<h3> <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
  <% end -%>
</h3>

<%@person.errors.messages.values.each do |msg| %>
    <%msg.each do  |m| %>
        <li class="errors"><%= m %></li>
    <%end %>
<% end %>

<%= form_for @person do |f| %>


    <div class="form-row">
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true %>
    </div>

    <div class="form-row">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="form-row">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="form-row">
      <%= f.submit "Edit Person" %>
    </div>

<% end %>